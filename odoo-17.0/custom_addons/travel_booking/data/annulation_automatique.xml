<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tâche planifiée pour l'annulation des réservations expirées -->
       <record id="ir_cron_cancel_unpaid_bookings" model="ir.cron">
           <field name="name">Annulation automatique des réservations impayées</field>
           <field name="model_id" ref="model_booking"/>
           <field name="state">code</field>
           <field name="code">model._cron_cancel_unpaid_bookings()</field>
           <field name="interval_number">1</field>
           <field name="interval_type">hours</field>
           <field name="numbercall">-1</field>
           <field name="doall" eval="False"/>
           <field name="active" eval="True"/>
       </record>
    </data>
</odoo>