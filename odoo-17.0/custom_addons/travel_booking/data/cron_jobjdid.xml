<odoo>
    <record id="ir_cron_train_flight_recommendation_model" model="ir.cron">
    <field name="name">Entraîner le modèle de recommandation de vols</field>
    <field name="model_id" ref="model_flight_recommendation_model"/>
    <field name="state">code</field>
    <field name="code">model.schedule_training()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">days</field>
    <field name="numbercall">-1</field>
    <field name="doall" eval="False"/>
    <field name="active" eval="True"/>
    </record>
</odoo>