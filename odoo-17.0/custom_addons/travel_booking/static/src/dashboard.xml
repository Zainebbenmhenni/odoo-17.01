<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
    <t t-name="travel_booking.BookingDashboard" owl="1">
        <script type="text/javascript" src="/travel_booking/static/lib/apexcharts.min.js"/>
        <div class="o_booking_dashboard" style="height: 100vh; overflow-y: auto;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <h1>Booking Dashboard</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Total Bookings</h5>
                                <p class="card-text" t-esc="state.bookingsData.total"
                                   t-att-class="{'text-primary': true}"
                                   t-on-click="() => this.openBookings([])" />
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Confirmed</h5>
                                <p class="card-text" t-esc="state.bookingsData.confirmed"
                                   t-att-class="{'text-success': true}"
                                   t-on-click="() => this.openBookings([['state', '=', 'confirmed']])" />
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Pending</h5>
                                <p class="card-text" t-esc="state.bookingsData.pending"
                                   t-att-class="{'text-warning': true}"
                                   t-on-click="() => this.openBookings([['state', '=', 'en attente de paiement']])" />
                            </div>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Cancelled</h5>
                                <p class="card-text" t-esc="state.bookingsData.cancelled"
                                   t-att-class="{'text-danger': true}"
                                   t-on-click="() => this.openBookings([['state', '=', 'cancelled']])" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Gender Distribution</h5>
                                <div id="gender-chart" />
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Airline Distribution</h5>
                                <div id="airline-chart" style="max-height: 300px; overflow-y: auto;" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Recent Bookings</h5>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Flight Number</th>
                                            <th>Departure Date</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="state.bookingsData.recentBookings" t-as="booking" t-key="booking.id">
                                            <tr>
                                                <td t-esc="booking.name" />
                                                <td t-esc="booking.flight_number" />
                                                <td t-esc="booking.departure_date" />
                                                <td t-esc="booking.state" />
                                                <td>
                                                    <button class="btn btn-sm btn-info"
                                                            t-on-click="() => this.openRecentBooking(booking.id)">
                                                        View Details
                                                    </button>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>