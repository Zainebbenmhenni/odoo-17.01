<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="travel_signup_template" name="Travel Signup">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">Créer un compte</h3>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/travel/do_signup">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                    <!-- Error messages -->
                                    <div t-if="error_message" class="alert alert-danger">
                                        <ul t-foreach="error_message or []" t-as="err">
                                            <li t-esc="err"/>
                                        </ul>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="name">Nom complet <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="name" id="name"
                                               t-att-class="'form-control is-invalid' if error.get('name') else 'form-control'"
                                               t-att-value="name if name else ''"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="login">Email <span class="text-danger">*</span></label>
                                        <input type="email" class="form-control" name="login" id="login"
                                               t-att-class="'form-control is-invalid' if error.get('login') else 'form-control'"
                                               t-att-value="login if login else ''"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="password">Mot de passe <span class="text-danger">*</span></label>
                                        <input type="password" class="form-control" name="password" id="password"
                                               t-att-class="'form-control is-invalid' if error.get('password') else 'form-control'"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="confirm_password">Confirmer le mot de passe <span class="text-danger">*</span></label>
                                        <input type="password" class="form-control" name="confirm_password" id="confirm_password"
                                               t-att-class="'form-control is-invalid' if error.get('confirm_password') else 'form-control'"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="phone">Téléphone</label>
                                        <input type="tel" class="form-control" name="phone" id="phone"
                                               t-att-value="phone if phone else ''"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="passport_number">Numéro de passeport <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="passport_number" id="passport_number"
                                               t-att-class="'form-control is-invalid' if error.get('passport_number') else 'form-control'"
                                               t-att-value="passport_number if passport_number else ''"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="birth_date">Date de naissance <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" name="birth_date" id="birth_date"
                                               t-att-class="'form-control is-invalid' if error.get('birth_date') else 'form-control'"
                                               t-att-value="birth_date if birth_date else ''"/>
                                    </div>

                                    <div class="form-group mb-3">
                                        <label for="gender">Genre <span class="text-danger">*</span></label>
                                        <select class="form-control" name="gender" id="gender"
                                                t-att-class="'form-control is-invalid' if error.get('gender') else 'form-control'">
                                            <option value="">Sélectionnez</option>
                                            <option value="M" t-att-selected="gender == 'M' if gender else False">Masculin</option>
                                            <option value="F" t-att-selected="gender == 'F' if gender else False">Féminin</option>
                                        </select>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                                    </div>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <p class="mb-0">Vous avez déjà un compte? <a href="/travel/signin">Se connecter</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>