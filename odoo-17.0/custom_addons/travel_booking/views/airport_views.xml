<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_airport_search" model="ir.ui.view">
        <field name="name">airport.search</field>
        <field name="model">airport</field>
        <field name="arch" type="xml">
            <search>
                <field name="iata"/>
                <field name="name"/>
                <field name="city"/>
            </search>
        </field>
    </record>
    <record id="view_airport_form" model="ir.ui.view">
        <field name="name">airport.form</field>
        <field name="model">airport</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                    </div>
                    <group>
                        <group>
                            <field name="iata"/>
                        </group>
                        <group>

                            <field name="name"/>
                            <field name="city"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_airport_tree" model="ir.ui.view">
        <field name="name">airport.tree</field>
        <field name="model">airport</field>
        <field name="arch" type="xml">
            <tree>
                <field name="iata"/>
                <field name="name"/>
                <field name="city"/>
            </tree>
        </field>
    </record>

    <record id="action_airport" model="ir.actions.act_window">
        <field name="name">Airports</field>
        <field name="res_model">airport</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first airport!
            </p>
        </field>
    </record>

