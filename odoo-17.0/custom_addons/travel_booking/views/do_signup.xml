<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="travel_signup_email_exists" name="Email Already Exists">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6 col-md-8">
                        <div class="card">
                            <div class="card-header bg-danger text-white">
                                <h3 class="mb-0">
                                    <i class="fa fa-exclamation-triangle me-2"></i>Email Already Exists
                                </h3>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-danger" role="alert">
                                    <strong>Error:</strong> You cannot have two users with the same login!
                                </div>

                                <p>The email address <strong t-esc="login"></strong> is already registered in our system.</p>

                                <div class="mt-4">
                                    <p>You can:</p>
                                    <ul>
                                        <li>Try to <a href="/travel/signin">sign in</a> with this email if you already have an account</li>
                                        <li><a href="/travel/signup">Sign up</a> with a different email address</li>
                                        <li><a href="/web/reset_password">Reset your password</a> if you've forgotten it</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-between">
                                    <a href="/travel/signup" class="btn btn-secondary">
                                        <i class="fa fa-arrow-left me-1"></i> Back to Sign Up
                                    </a>
                                    <a href="/travel/signin" class="btn btn-primary">
                                        Sign In <i class="fa fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>