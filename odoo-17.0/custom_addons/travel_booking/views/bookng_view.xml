<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Form pour les Réservations -->
        <record id="view_booking_form" model="ir.ui.view">
            <field name="name">booking.form</field>
            <field name="model">booking</field>
            <field name="arch" type="xml">
                <form string="Réservation">
                    <header>
                        <button name="action_confirm1"
                                string="Confirmer"
                                type="object"
                                class="oe_highlight"
                                invisible="state != 'en attente de paiement'"/>
                        <button name="action_cancel"
                                string="Annuler"
                                type="object"
                                invisible="state not in ['draft', 'confirmed', 'en attente de paiement']"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <!-- Champs invisibles nécessaires pour les conditions -->
                        <field name="sale_order_id" invisible="1"/>
                        <field name="ticket_ids" invisible="1"/>

                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_sale_order"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-usd"
                                    invisible="not sale_order_id">
                                <field name="sale_order_count" widget="statinfo" string="Devis"/>
                            </button>
                            <button name="action_view_tickets"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-ticket"
                                    invisible="not ticket_ids">
                                <field name="ticket_count" widget="statinfo" string="Tickets"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="booking_reference" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Informations passager principal et détails du vol -->
                        <group>
                            <group string="Informations passager principal">
                                <!-- Champ partner_id pour lier au contact -->
                                <field name="partner_id" readonly="state != 'draft'" domain="[('type','=','contact')]"
                                       options="{'no_create': False, 'no_open': False}" required="1"/>
                                <field name="name" readonly="1"/>
                                <field name="email" readonly="1"/>
                                <field name="phone" readonly="1"/>
                                <field name="passport" readonly="1"/>
                                <field name="birth_date" readonly="1"/>
                                <field name="gender" readonly="1"/>
                            </group>
                            <group string="Détails du vol">
                                <field name="flight_number" readonly="state != 'draft'"/>
                                <field name="airline" readonly="state != 'draft'"/>
                                <field name="departure_date" readonly="state != 'draft'"/>
                                <field name="departure_time" readonly="state != 'draft'"/>
                                <field name="arrival_date" readonly="state != 'draft'"/>
                                <field name="arrival_time" readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <!-- Informations sur le nombre de passagers -->
                        <group string="Informations des passagers">
                            <group>
                                <field name="adult_count" readonly="state != 'draft'"/>
                                <field name="child_count" readonly="state != 'draft'"/>
                                <field name="infant_count" readonly="state != 'draft'"/>
                            </group>
                            <group>
                                <field name="seat_preference" readonly="state != 'draft'"/>
                                <field name="meal_preference" readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <!-- Informations de prix -->
                        <group>
                            <group string="Informations de prix">
                                <field name="price" readonly="state != 'draft'"/>
                                <field name="currency" readonly="state != 'draft'"/>
                            </group>
                        </group>

                        <!-- Notebook pour tous les détails -->
                        <notebook>
                            <!-- Page pour les passagers additionnels - toujours visible -->
                            <page string="Passagers additionnels">
                                <field name="passenger_ids" mode="tree,form">
                                    <tree editable="bottom">
                                        <!-- Remplacer le champ name par partner_id -->
                                        <field name="partner_id" domain="[('type','=','contact')]" options="{'no_create': False, 'no_open': False}"/>
                                        <field name="name" readonly="1"/>
                                        <field name="birth_date" readonly="1"/>
                                        <field name="gender" readonly="1"/>
                                        <field name="passport" readonly="1"/>
                                        <field name="passenger_type"/>
                                        <field name="seat_preference"/>
                                        <field name="meal_preference"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="partner_id" domain="[('type','=','contact')]" options="{'no_create': False, 'no_open': False}"/>
                                            <field name="name" readonly="1"/>
                                            <field name="birth_date" readonly="1"/>
                                            <field name="gender" readonly="1"/>
                                            <field name="passport" readonly="1"/>
                                            <field name="passenger_type"/>
                                            <field name="seat_preference"/>
                                            <field name="meal_preference"/>
                                        </group>
                                    </form>
                                </field>
                            </page>

                            <!-- Page pour les tickets -->
                            <page string="Tickets" invisible="not ticket_ids">
                                <field name="ticket_ids" readonly="1">
                                    <tree>
                                        <field name="ticket_number"/>
                                        <field name="passenger_name"/>
                                        <field name="passenger_type"/>
                                    </tree>
                                </field>
                            </page>

                            <!-- Informations de paiement -->
                            <page string="Informations de paiement" invisible="state == 'draft'">
                                <group>
                                    <field name="payment_method" readonly="state != 'en attente de paiement'"/>
                                    <field name="payment_date" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Tree pour les Réservations (pas besoin de changements majeurs) -->
        <record id="view_booking_tree" model="ir.ui.view">
            <field name="name">booking.tree</field>
            <field name="model">booking</field>
            <field name="arch" type="xml">
                <tree string="Réservations" decoration-success="state == 'confirmed'" decoration-danger="state == 'cancelled'" decoration-info="state == 'draft'" decoration-warning="state == 'en attente de paiement'">
                    <field name="booking_reference"/>
                    <field name="partner_id"/>
                    <field name="flight_number"/>
                    <field name="departure_date"/>
                    <field name="arrival_date"/>
                    <field name="price"/>
                    <field name="currency"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Vue Search pour les Réservations (ajout de partner_id) -->
        <record id="view_booking_search" model="ir.ui.view">
            <field name="name">booking.search</field>
            <field name="model">booking</field>
            <field name="arch" type="xml">
                <search string="Rechercher des réservations">
                    <field name="booking_reference"/>
                    <field name="partner_id"/>
                    <field name="email"/>
                    <field name="flight_number"/>
                    <field name="airline"/>
                    <separator/>
                    <filter string="Brouillon" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="En attente de paiement" name="pending" domain="[('state','=','en attente de paiement')]"/>
                    <filter string="Confirmée" name="confirmed" domain="[('state','=','confirmed')]"/>
                    <filter string="Annulée" name="cancelled" domain="[('state','=','cancelled')]"/>
                    <group expand="0" string="Regrouper par">
                        <filter string="Contact" name="groupby_partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="État" name="groupby_state" context="{'group_by': 'state'}"/>
                        <filter string="Date de départ" name="groupby_departure" context="{'group_by': 'departure_date'}"/>
                        <filter string="Compagnie aérienne" name="groupby_airline" context="{'group_by': 'airline'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Calendar pour les Réservations (pas de changements majeurs) -->
        <record id="view_booking_calendar" model="ir.ui.view">
            <field name="name">booking.calendar</field>
            <field name="model">booking</field>
            <field name="arch" type="xml">
                <calendar string="Réservations" date_start="departure_date" color="state">
                    <field name="partner_id"/>
                    <field name="flight_number"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <!-- Action pour les Réservations (inchangé) -->
        <record id="action_booking" model="ir.actions.act_window">
            <field name="name">Réservations</field>
            <field name="res_model">booking</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{'search_default_draft': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre première réservation de vol
                </p>
            </field>
        </record>
    </data>
</odoo>