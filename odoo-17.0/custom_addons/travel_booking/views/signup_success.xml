<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="signup_success" name="Signup Success">
        <t t-call="website.layout">
            <div class="container mt-4 mb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <h3 class="mb-0">Inscription réussie</h3>
                            </div>
                            <div class="card-body">
                                <div class="alert alert-success">
                                    <p>Votre compte a été créé avec succès!</p>
                                    <p>Vous pouvez maintenant vous connecter avec votre email: <strong t-esc="login"></strong></p>
                                </div>
                                <div class="d-grid mt-4">
                                    <a href="/travel/signin" style="display: block; padding: 14px 20px; border-radius: 8px; font-weight: 600; font-size: 16px; text-decoration: none; background-color: #7A8514; color: white; text-align: center;">Se connecter</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>