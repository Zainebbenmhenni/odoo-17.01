<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="travel_error" name="Travel Booking Error">
        <t t-name="travel_booking.travel_error">
            <t t-call="website.layout">
                <div class="container">
                    <section class="mt-4">
                        <h1>Erreur de réservation</h1>
                        <p>Une erreur est survenue lors du traitement de votre réservation.</p>
                        <div class="mt-3">
                            <a href="/travel" class="btn btn-primary">Retour à la recherche</a>
                        </div>
                    </section>
                </div>
            </t>
        </t>
    </template>
</odoo>