            <div id="flightSearchResults" class="container mt-4" t-att-data-trip-type="search_params.get('trip_type')">

                <div class="row">
                    <div class="col-12">
                        <h2>Résultats de recherche de vols</h2>

                        <!-- Détails de la recherche -->
                        <!-- 1. Ajouter la bande de sélection sous "Détails de la recherche" -->
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Détails de votre recherche</h5>
        <div class="row">
            <div class="col-md-3">
                <strong>Type:</strong>
                <span t-if="search_params.get('trip_type') == 'OneWay'">Aller simple</span>
                <span t-if="search_params.get('trip_type') == 'RoundTrip'">Aller-retour</span>
                <span t-if="search_params.get('trip_type') == 'MultiCity'">Multi-destinations</span>
            </div>
            <div class="col-md-3">
                <strong>De:</strong> <span t-esc="search_params.get('departure_id')"/>
            </div>
            <div class="col-md-3">
                <strong>À:</strong> <span t-esc="search_params.get('destination_id')"/>
            </div>
            <div class="col-md-3">
                <strong>Date aller:</strong> <span t-esc="search_params.get('travel_date')"/>
            </div>
            <div t-if="search_params.get('trip_type') == 'RoundTrip'" class="col-md-3">
                <strong>Date retour:</strong> <span t-esc="search_params.get('return_date')"/>
            </div>
            <div class="col-md-3">
                <strong>Nombre d'enfants:</strong> <span t-esc="search_params.get('child_count', 0)"/>
            </div>
            <div class="col-md-3">
                <strong>Nombre d'adultes:</strong> <span t-esc="search_params.get('adult_count', 1)"/>
            </div>
            <div class="col-md-3">
                <strong>Nombre de Bébés:</strong> <span t-esc="search_params.get('infant_count', 0)"/>
            </div>
        </div>
    </div>
</div>

                        <div id="selectedFlightsBar" class="card mb-4 sticky-top" style="top: 10px; z-index: 1000; background-color: #f8f9fa; box-shadow: 0 4px 8px rgba(0,0,0,0.1); display: none;">
    <div class="card-body">
        <h5 class="card-title">Vols sélectionnés</h5>
        <div class="row" id="selectedFlightsContainer">
            <!-- Les vols sélectionnés seront ajoutés ici dynamiquement -->
            <div class="col-12" id="noFlightsMessage">
                <p class="text-muted">Aucun vol sélectionné pour le moment.</p>
            </div>
            <div class="col-md-6 d-none" id="selectedOutboundFlightContainer">
                <div class="card border-primary mb-2">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span>Vol Aller</span>
                        <button type="button" class="btn-close btn-close-white" onclick="removeSelectedFlight('outbound')"></button>
                    </div>
                    <div class="card-body" id="selectedOutboundFlightDetails">
                        <!-- Détails du vol aller sélectionné -->
                    </div>
                </div>
            </div>
            <div class="col-md-6 d-none" id="selectedReturnFlightContainer">
                <div class="card border-secondary mb-2">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <span>Vol Retour</span>
                        <button type="button" class="btn-close btn-close-white" onclick="removeSelectedFlight('return')"></button>
                    </div>
                    <div class="card-body" id="selectedReturnFlightDetails">
                        <!-- Détails du vol retour sélectionné -->
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-3 d-none" id="bookingButtonContainer">
            <form id="finalBookingForm" action="/travel/booking/finalize" method="post">
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                <input type="hidden" id="outboundFlightId" name="outbound_flight_id" value=""/>
                <input type="hidden" id="returnFlightId" name="return_flight_id" value=""/>
                <input type="hidden" name="adult_count" t-att-value="search_params.get('adult_count', 1)"/>
                <input type="hidden" name="child_count" t-att-value="search_params.get('child_count', 0)"/>
                <input type="hidden" name="infant_count" t-att-value="search_params.get('infant_count', 0)"/>
                <input type="hidden" name="trip_type" t-att-value="search_params.get('trip_type')"/>
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="fa fa-check-circle me-1"></i> Réserver maintenant
                </button>
            </form>
        </div>
    </div>
</div>

                        <!-- Tableau des résultats -->
                        <!-- 3. Modifier le tableau des vols aller -->
<div t-if="flights and flights.get('response', {}).get('flights')" class="table-responsive">
    <!-- Affichage des vols aller -->
    <h3 class="mb-3">Vols aller</h3>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Type</th>
                <th>Compagnie</th>
                <th>Vol</th>
                <th>Départ</th>
                <th>Arrivée</th>
                <th>Durée</th>
                <th>Prix</th>
                <th>Bagages</th>
                <th>Places</th>
                <th>Recommandé</th>
                <th>Score</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <t t-foreach="flights.get('response', {}).get('flights', [])" t-as="flight">
                <t t-if="not flight.get('isReturn', False)">
                    <tr t-att-class="flight.get('is_recommended', False) and 'table-success' or ''">
                        <td><span class="badge bg-primary">Aller</span></td>
                        <td><t t-esc="flight.get('airlines', {}).get('full', '')"/></td>
                        <td><t t-esc="flight.get('flightNumber', '')"/></td>
                        <td>
                            <div><t t-esc="flight.get('departDateTime', {}).get('time', '')"/></div>
                            <small class="text-muted"><t t-esc="flight.get('departDateTime', {}).get('date', '')"/></small>
                        </td>
                        <td>
                            <div><t t-esc="flight.get('arrivalDateTime', {}).get('time', '')"/></div>
                            <small class="text-muted"><t t-esc="flight.get('arrivalDateTime', {}).get('date', '')"/></small>
                        </td>
                        <td><t t-esc="flight.get('duration', '')"/></td>
                        <td><strong><t t-esc="flight.get('price', '')"/> <t t-esc="flight.get('currency', 'EUR')"/></strong></td>
                        <td><t t-esc="flight.get('baggageWeight', '')"/> <t t-esc="flight.get('baggageUnit', '')"/></td>
                        <td><t t-esc="flight.get('seatsRemaining', '')"/></td>
                        <td>
                            <t t-if="flight.get('is_recommended', False)">
                                <span class="badge bg-success">
                                    <i class="fa fa-thumbs-up me-1"></i> Recommandé
                                </span>
                            </t>
                        </td>
                        <td>
                            <t t-if="flight.get('recommendation_score') is not None">
                                <div class="progress" style="height: 10px; width: 100px;">
                                    <div class="progress-bar" role="progressbar" t-att-style="'width: ' + str(int(flight.get('recommendation_score', 0) * 100)) + '%'"
                                         t-att-aria-valuenow="int(flight.get('recommendation_score', 0) * 100)"
                                         aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <small class="d-block text-center mt-1"><t t-esc="int(flight.get('recommendation_score', 0) * 100)"/>%</small>
                            </t>
                        </td>
                        <td>
                            <button type="button" class="btn btn-outline-primary select-flight-btn"
                                t-att-data-flight-id="flight.get('id', '')"
                                data-flight-type="outbound"
                                t-att-data-flight-number="flight.get('flightNumber', '')"
                                t-att-data-departure-time="flight.get('departDateTime', {}).get('time', '')"
                                t-att-data-departure-date="flight.get('departDateTime', {}).get('date', '')"
                                t-att-data-arrival-time="flight.get('arrivalDateTime', {}).get('time', '')"
                                t-att-data-arrival-date="flight.get('arrivalDateTime', {}).get('date', '')"
                                t-att-data-airline="flight.get('airlines', {}).get('full', '')"
                                t-att-data-price="flight.get('price', '')"
                                t-att-data-currency="flight.get('currency', 'EUR')"
                                t-att-data-baggage="flight.get('baggageWeight', '')"
                                t-att-data-is-recommended="'true' if flight.get('is_recommended', False) else 'false'"
                                onclick="selectFlight(this)">
                                <i class="fa fa-check me-1"></i> Choisir
                            </button>
                        </td>
                    </tr>
                </t>
            </t>
        </tbody>
    </table>


