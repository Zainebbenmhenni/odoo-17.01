<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_customer_flight_preference_form" model="ir.ui.view">
    <field name="name">customer.flight.preference.form</field>
    <field name="model">customer.flight.preference</field>
    <field name="arch" type="xml">
        <form string="Préférences de vol">
            <header>
                <button name="calculate_preferences_from_history" string="Recalculer les préférences" type="object" class="oe_highlight"/>
            </header>
            <sheet>
                <group>
                    <field name="partner_id"/>
                    <field name="last_update"/>
                </group>
                <group string="Préférences calculées">
                    <group>
                        <field name="preferred_class"/>
                        <field name="preferred_departure_time"/>
                        <field name="avg_price"/>
                        <field name="price_sensitivity" widget="percentage"/>
                    </group>
                    <group>
                        <field name="preferred_airline_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group string="Données détaillées" groups="base.group_system">
                    <field name="airline_preference_json"/>
                    <field name="time_preference_json"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_customer_flight_preference_tree" model="ir.ui.view">
    <field name="name">customer.flight.preference.tree</field>
    <field name="model">customer.flight.preference</field>
    <field name="arch" type="xml">
        <tree string="Préférences de vol">
            <field name="partner_id"/>
            <field name="preferred_class"/>
            <field name="preferred_departure_time"/>
            <field name="avg_price"/>
            <field name="price_sensitivity" widget="percentage"/>
            <field name="last_update"/>
        </tree>
    </field>
</record>

<record id="action_customer_flight_preferences" model="ir.actions.act_window">
    <field name="name">Préférences de vol des clients</field>
    <field name="res_model">customer.flight.preference</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="menu_customer_flight_preferences"
          name="Préférences de vol"
          parent="menu_travel_root"
          action="action_customer_flight_preferences"
          sequence="30"/>
</odoo>