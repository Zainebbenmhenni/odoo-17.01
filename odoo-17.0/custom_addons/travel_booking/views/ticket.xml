<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Tree pour les Tickets -->
        <record id="view_booking_ticket_tree" model="ir.ui.view">
            <field name="name">booking.ticket.tree</field>
            <field name="model">booking.ticket</field>
            <field name="arch" type="xml">
                <tree string="Tickets">
                    <field name="ticket_number"/>
<!--                    <field name="partner_id"/>-->
                    <field name="passenger_name"/>
                    <field name="passenger_type"/>
                    <field name="booking_id"/>
                    <field name="passport_number"/>
                    <field name="seat_preference"/>
                    <field name="meal_preference"/>
                </tree>
            </field>
        </record>

        <!-- Vue Form pour les Tickets -->
        <record id="view_booking_ticket_form" model="ir.ui.view">
            <field name="name">booking.ticket.form</field>
            <field name="model">booking.ticket</field>
            <field name="arch" type="xml">
                <form string="Ticket">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ticket_number"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Informations passager">
<!--                                <field name="partner_id" options="{'no_create': True, 'no_open': False}"/>-->
                                <field name="passenger_name"/>
                                <field name="passenger_type"/>
                                <field name="birth_date"/>
                                <field name="gender"/>
                                <field name="passport_number"/>
                            </group>
                            <group string="Détails du voyage">
                                <field name="booking_id"/>
                                <field name="seat_preference"/>
                                <field name="meal_preference"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue Search pour les Tickets -->
        <record id="view_booking_ticket_search" model="ir.ui.view">
            <field name="name">booking.ticket.search</field>
            <field name="model">booking.ticket</field>
            <field name="arch" type="xml">
                <search string="Recherche de tickets">
                    <field name="ticket_number"/>
<!--                    <field name="partner_id"/>-->
                    <field name="passenger_name"/>
                    <field name="booking_id"/>
                    <field name="passport_number"/>
                    <separator/>
                    <filter string="Adultes" name="adult" domain="[('passenger_type', '=', 'adult')]"/>
                    <filter string="Enfants" name="child" domain="[('passenger_type', '=', 'child')]"/>
                    <filter string="Bébés" name="infant" domain="[('passenger_type', '=', 'infant')]"/>
                    <group expand="0" string="Regrouper par">
                        <filter name="group_by_partner" string="Contact" context="{'group_by': 'partner_id'}"/>
                        <filter name="group_by_booking" string="Réservation" context="{'group_by': 'booking_id'}"/>
                        <filter name="group_by_passenger_type" string="Type de passager" context="{'group_by': 'passenger_type'}"/>
                        <filter name="group_by_gender" string="Genre" context="{'group_by': 'gender'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action pour les Tickets (inchangé) -->
        <record id="action_booking_ticket" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="res_model">booking.ticket</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_booking_ticket_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Les tickets seront générés automatiquement lors de la confirmation des réservations
                </p>
            </field>
        </record>
    </data>
</odoo>