<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Hériter du template de layout existant pour modifier l'en-tête -->
    <template id="travel_header" inherit_id="website.layout" name="Travel Booking Header">
        <xpath expr="//header" position="replace">
            <header class="o_header_standard">
                <div class="header-custom" style="background-color: #1a3b5d; color: white;">
                    <div class="container">
                        <div class="row py-2 align-items-center">
                            <!-- Logo à gauche -->
                            <div class="col-lg-3 col-md-4 col-6">
                                <a href="/travel" class="navbar-brand">
                                    <img src="/travel_booking/static/img/Fly.png" alt="Travel Logo" class="img-fluid" style="max-height: 70px;"/>
                                </a>
                            </div>

                            <!-- Menu de navigation au centre -->
                            <div class="col-lg-6 col-md-4 d-none d-md-block text-center">
                                <nav class="navbar navbar-expand">
                                    <ul class="navbar-nav">
                                        <li class="nav-item mx-3">
                                            <a href="/travel" class="nav-link text-white">Accueil</a>
                                        </li>
                                        <li class="nav-item mx-3">
                                            <a href="/travel/flights" class="nav-link text-white">Vols</a>
                                        </li>
                                        <li class="nav-item mx-3">
                                            <a href="/contact" class="nav-link text-white">Contact</a>
                                        </li>
                                        <t t-if="not user_id._is_public()">
                                            <li class="nav-item mx-3">
                                                <a href="/travel/logout" class="nav-link text-white">Déconnexion</a>
                                            </li>
                                        </t>
                                    </ul>
                                </nav>
                            </div>

                            <!-- Boutons de droite (connexion, etc.) -->
                            <div class="col-lg-3 col-md-4 col-6 text-end">
                                <t t-if="not user_id._is_public()">
                                    <!-- Utilisateur connecté -->
                                    <div class="dropdown">
                                        <button class="btn btn-outline-light dropdown-toggle" type="button" id="userMenu" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-user me-1"></i> <span t-esc="user_id.name"/>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                            <li><a class="dropdown-item" href="/my/travel">Mes voyages</a></li>
                                            <li><a class="dropdown-item" href="/my/profile">Mon profil</a></li>
                                        </ul>
                                    </div>
                                </t>
                                <t t-else="">
                                    <!-- Utilisateur non connecté -->
                                    <a href="/travel/signin" class="btn btn-outline-light me-2">Connexion</a>
                                    <a href="/travel/signup" class="btn btn-light">Inscription</a>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </xpath>
    </template>
</odoo>